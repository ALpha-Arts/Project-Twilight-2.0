# 실크햇+단안경
pdxmesh = {
	name = "lia_pony_test_portrait_accessory_mesh"
	# 이건 쓰는 캔버스 파일이 다른데,
	# 우리가 일종의 여러 층의 레이어를 구현하려고 할 때 한 캔버스에 다 띄워놓으면
	# 서로 이상하게 곂치거나 혹은 앞에 가야할 이미지가 뒤로 간다거나 할 위험이 있으니,
	# 블렌더 상에서 딱 0.1만큼만 캔버스를 통째로 앞으로 이동시켜서 따로 만든 캔버스가 이것
	file = "canvas_F1.mesh"
	# 윗말이 길어져서 이어서 말하자면,
	# 아무튼 그 방식으로 일단 주로 캐릭터 기본 모습을 그릴 바로 위에서 쓰인 일반 캔버스와,
	# 모자등의 악세서리 표현용으로 바로 윗층에 둘 캔버스F1,
	# 한층 더 앞에 둘 F2, 그리고 기본 캐릭터 뒷면에 깔 캔버스B1까지 만들어서 넣어두었음.
	# file = "canvas_test.mesh"
	scale = 1.0
	meshsettings = {
		name = "pony_canvas_F1Shape"
		index = 0
		texture_diffuse = "test_portrait_accessory.dds"
		texture_specular = "test_portrait_accessory.dds"
		#texture_diffuse = "test_portrait.dds"
		#texture_specular = "test_portrait.dds"
		shader = "portrait_attachment_alpha_to_coverage"
		shader_file = "gfx/simple_portrait.shader"
	}
}
entity = {
	name = "lia_pony_test_portrait_accessory_entity"
	pdxmesh = "lia_pony_test_portrait_accessory_mesh"
}

