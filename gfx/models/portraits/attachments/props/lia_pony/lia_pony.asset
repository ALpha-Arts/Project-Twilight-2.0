# 틀 #

## 예시 ##

# 아래와 같이 pdxmesh 랑 entity 합쳐
# 한 묶음이 실제로 쓰일 이미지 한 장을 구성
pdxmesh = {
	# 겜이 알아들을 이 그림의 이름
	name = "lia_pony_test_portrait_full_mesh"

	# 이게 우리가 쓸 가상 '캔버스'(라고 그냥 내가 편하게 부르는것) 매쉬(3D물체)
	# 현재 가로 세로 각각 3:4 비율의 캔버스를 사용중
	# 여기에다가 텍스쳐를 입혀 띄우는식으로 유사 2D이미지를 구현
	file = "canvas.mesh"

	# # 이건 그냥 블렌더에서 캔버스 이리저리 늘려보고 옮겨보고 하는 실험할때 쓴 실험용 캔버스
	# # 지금은 별로 쓸모없음
	# file = "canvas_test.mesh"

	# 이건 게임상에서 해당 캔버스가 어느정도 크기배율로 나올지 정하는 값
	scale = 1.0

	meshsettings = {
		# 이건 캔버스 만들고 나서,
		# 블렌더 안에서 해당 캔버스 물체의 Object Data Properties 탭에서 달아준 이름인데,
		# 그 이름과 여기 이름이 완전히 일치해야만 함.
		name = "pony_canvasShape"

		# 이건 정확히 몬지 모르겠다,
		# 아마도 한 pdxmesh 안에서 여러 meshsettings,
		# 즉 두개 이상의 메쉬를 포함시켜 인식해야할때 달아주는 번호표 같은데,
		# 일단 우리는 0 말곤 쓸일이 없을 것
		index = 0

		# 이 에셋 파일이 들어있는 폴더 안에서 이 캔버스 위에 어떤 텍스쳐를 입혀 띄울지 고르는것
		texture_diffuse = "test_portrait_full.dds"

		# 이건 원래 반사나 금속질감 혹은 거칠기 같은 값이 들어있는 텍스쳐용인데,
		# 우린 그 데이터 안쓸거라서 별 의미는 없을것
		texture_specular = "test_portrait_full.dds"

		# # 이 바로 아래는 그냥 테스트용 텍스쳐
		# texture_diffuse = "test_portrait.dds"
		# texture_specular = "test_portrait.dds"

		# 어떤 쉐이더를 이용해서 겜에 띄울지
		shader = "portrait_attachment_alpha_to_coverage"

		# 이건 우리가 쓸 쉐이더 파일이 어디있는지.
		# 원래는 그냥 엔진 안에 있는 쉐이더중 골라쓰는데,
		# 우리는 반사나 질감같은거 싹 빼고 그냥 2D이미지만 깔끔하게 띄울거라서
		# 모드의 gfx폴더에다 잡다한 효과를 거세시킨 커스텀 쉐이더 파일을 사용하게 될 것
		shader_file = "gfx/simple_portrait.shader"
	}
}
entity = {
	# 이제 이 엔티티 이름이 gfx/portraits/accessories/lia_pony.txt 로 넘겨질 예정
	name = "lia_pony_test_portrait_full_entity"

	# 위에서 정한 이름을 받아서 겜이 알아들을 수 있는 엔티티로 지정함
	pdxmesh = "lia_pony_test_portrait_full_mesh"
}

